@model IEnumerable<Parrucchiere.Models.Recensioni>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    @foreach (var r in Model)
    {
        <div class="col-md-12 d-flex justify-content-center align-items-center ">
            <div class="card mb-4 w-50">
                <div class="card-body">
                    <h5 class="card-title">@r.FkUtente</h5>
                    <div class="star-rating">
                        @for (int i = 0; i < 5; i++)
                        {
                            if (i < r.Valutazione)
                            {
                                <i class="bi bi-star-fill text-success fs-3"></i>
                            }
                            else
                            {
                                <i class="bi bi-star fs-3"></i>
                            }
                        }
                    </div>
                    <p class="card-text">@r.Testo</p>
                </div>
            </div>
        </div>
    }
</div>
