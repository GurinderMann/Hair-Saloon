@model Parrucchiere.Models.Utenti
@{
    ViewBag.Title = "EditPass";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row mx-auto">
            <div class="col-md-6 col-md-offset-3">
                <div class="card w-75">
                    <div class="card-body shadow">
                        <h4>Modifica Password</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IdUtente)

                        <div class="form-group">
                            <label class="form-label"> <strong> Inserisci la password attuale: </strong></label>
                            <div class="col-md-10">
                                @Html.Password("CurrentPassword", null, new { @class = "form-control", id = "myInput" })
                                @Html.ValidationMessage("CurrentPassword", "", new { @class = "text-danger" })
                                <input type="checkbox" class="my-3 mx-2" onclick="myFunction()">Mostra
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <label class="form-label"><strong> Nuova password: </strong></label>
                            <div class="col-md-10">

                                @Html.Password("NewPassword", null, new { @class = "form-control", id = "new-password" })

                                @Html.ValidationMessage("NewPassword", "", new { @class = "text-danger" })

                                <input type="checkbox" class="my-3 mx-2" onclick="pass()">Mostra
                            </div>
                        </div>
                      
                        <div class="form-group">
                            <label class="form-label"><strong> Conferma nuova password: </strong></label>
                            <div class="col-md-10">
                                @Html.Password("ConfirmPassword", null, new { @class = "form-control", id = "confirm" })
                                @Html.ValidationMessage("ConfirmPassword", "", new { @class = "text-danger" })
                                <input type="checkbox" class="my-3 mx-2" onclick="passConf()">Mostra
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-outline-primary mt-3" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section scripts{

    <script>
        function myFunction() {
            var x = document.getElementById("myInput");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
        function pass() {
            var x = document.getElementById("new-password");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
        function passConf() {
            var x = document.getElementById("confirm");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
    }