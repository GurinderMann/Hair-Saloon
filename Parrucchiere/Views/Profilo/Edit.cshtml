@model Parrucchiere.Models.Utenti

@{
    ViewBag.Title = "Edit";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container ">
        <div class="row mx-auto">
            <div class="col-md-6 col-md-offset-3">
                <div class="card w-75">
                    <div class="card-body shadow">
                        <h4>Modifica informazioni personali</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model =>model.IdUtente)

                        <div class="form-group">
                            <label class="form-label"> Nome: </label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <label class="form-label"> Cognome: </label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Cognome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Cognome, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <label class="form-label"> Email: </label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <label class="form-label"> Username: </label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                 

                        <div class="form-group mt-3">
                            <label class="form-label"> Numero di telefono: </label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control", type = "text" })
                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                            </div>
                        </div>


                     

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Salva" class="btn btn-outline-primary mt-3" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


}