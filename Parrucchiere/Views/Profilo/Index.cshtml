@model IEnumerable<Parrucchiere.Models.Utenti>
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/profile.css" rel="stylesheet" />


@foreach (var u in Model)
{
   



    <div class="container">
        <div class="main-body">

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">

                                <div class="mt-3">
                                    <h4>@u.Nome @u.Cognome </h4>
                                    <p class="text-secondary mb-1">@u.Role</p>


                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3 text-center">
                        <h5 class="mt-3"> Le tue prenotazioni </h5>
                        <hr />
                        <ul class="list-group list-group-flush">
                            @foreach (var tipoOption in ViewBag.TipoOptions as List<SelectListItem>)
                            {
                                <li class="list-group-item">
                                    <strong>@tipoOption.Text</strong>

                                </li>

                            }
                        </ul>
                        <p ><a class="text-dark text-decoration-none" href="@Url.Action("Index", "Prenotazioni")">Visualizza maggiori informazioni<span class="arrow right "></span></a></p>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @u.Nome @u.Cognome
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @u.Email
                                </div>
                            </div>
                            <hr>


                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Mobile</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @u.Telefono
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Username</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @u.Username
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <a class="btn btn-primary " href="@Url.Action("Edit", "Profilo", new {id = u.IdUtente}) ">Edit</a>
                                    <a class="btn btn-warning " href="@Url.Action("EditPass", "Profilo", new {id = u.IdUtente}) ">Modifica password</a>
                                   
                                </div>
                            </div>
                        </div>
                    </div>





                </div>
            </div>

        </div>
    </div>
}

