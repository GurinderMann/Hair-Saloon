@model Parrucchiere.Models.Risposte

@{
    ViewBag.Title = "Risposta";
}



<link href="~/Content/Site.css" rel="stylesheet" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="">
                <div class="glass ">
                    <div>
                        <h2 class="card-title text-center mt-2">Rispondi alla domanda</h2>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal w-100 mx-auto">
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.IdRisposta)
                                <div class="form-group text-center">
                                    <label> Scrivi qui la tua risposta </label>
                                    <div>
                                        <div class="form-floating d-flex justify-content-center align-items-center">
                                            @Html.TextAreaFor(model => model.Risposta, new { @class = "form-control h-100", id = "floatingTextarea2" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Risposta, "", new { @class = "text-danger" })
                                    </div>
                                </div>



                                <div class="form-group d-flex justify-content-center align-items-center mt-3 mb-3">

                                    <button id="btn" type="submit">
                                        <p id="btnText" class="mt-2">Invia</p>
                                        <div class="check-box">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 50 50">
                                                <path fill="transparent" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
                                            </svg>
                                        </div>
                                    </button>

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
